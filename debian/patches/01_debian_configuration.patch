Author: Lorenzo Martignoni <lorenzo.martignoni@poste.it>
Description: Customize the shorewall.conf configuration file to be more like what is
expected by Debian users.
--- shorewall-debian.orig/configfiles/shorewall.conf
+++ shorewall-debian/configfiles/shorewall.conf
@@ -9,7 +9,7 @@
 #		       S T A R T U P   E N A B L E D
 ###############################################################################
 
-STARTUP_ENABLED=No
+STARTUP_ENABLED=Yes
 
 ###############################################################################
 #		              V E R B O S I T Y
@@ -73,7 +73,7 @@
 
 SHOREWALL_SHELL=/bin/sh
 
-SUBSYSLOCK=/var/lock/subsys/shorewall
+SUBSYSLOCK=""
 
 TC=
 
@@ -144,7 +144,7 @@
 
 HIGH_ROUTE_MARKS=No
 
-IP_FORWARDING=On
+IP_FORWARDING=Keep
 
 KEEP_RT_TABLES=No
 
@@ -180,7 +180,7 @@
 
 RETAIN_ALIASES=No
 
-ROUTE_FILTER=No
+ROUTE_FILTER=Yes
 
 SAVE_IPSETS=No
 
